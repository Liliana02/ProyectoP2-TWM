@page
@model AguadeCactus.WebSite.Pages.User.Edit


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AguadeCactus.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/userA.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AguadeCactus.WebSite.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"/>
</head>
<body class="bg-black">
<div class="container center-content-container">
    <main role="main" class="pb-3">
        <div class="center-image-text">
            <form method="post">
                <input type="hidden"/>
                
                
                <div class="row">
                    
                    <br/>
                    <div class="col">
                        <input asp-for="UserDto.UserName" type="text" class="form-control" placeholder="Usuario" maxlength="45">
                        <span class="text-danger" asp-validation-for="UserDto.UserName"></span>
                        <br/>
                        <input asp-for="UserDto.Name" type="text" class="form-control" placeholder="Nombre(s)" maxlength="45">
                        <span class="text-danger" asp-validation-for="UserDto.Name"></span>
                        <br/>
                        <input asp-for="UserDto.LastName" type="text" class="form-control" placeholder="Apellidos" maxlength="45">
                        <span class="text-danger" asp-validation-for="UserDto.LastName"></span>
                        <br/>
                        <input asp-for="UserDto.Password" type="text" class="form-control" placeholder="Contraseña" maxlength="45">
                        <span class="text-danger" asp-validation-for="UserDto.Password"></span>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="inputAge">Edad</label>
                            <select asp-for="UserDto.Age" id="inputAge" class="form-control">
                                <option selected>18</option>
                                <option>19</option>
                                <option>20</option>
                                <option>21</option>
                                <option>22</option>
                                <option>23</option>
                                <option>24</option>
                                <option>25</option>
                                <option>26</option>
                                <option>27</option>
                                <option>28</option>
                                <option>29</option>
                                <option>30</option>
                                <option>31</option>
                                <option>32</option>
                                <option>33</option>
                                <option>34</option>
                                <option>35</option>
                            </select>
                            <span class="text-danger" asp-validation-for="UserDto.Age"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <label for="inputGender">Género</label>
                            <select asp-for="UserDto.Gender" id="inputGender" class="form-control" maxlength="45">
                                <option selected>Femenino</option>
                                <option>Masculino</option>
                                <option>No binario</option>
                            </select>
                            <span class="text-danger" asp-validation-for="UserDto.Gender"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <label for="inputRol">Rol</label>
                            <select asp-for="UserDto.Rol" id="inputRol" class="form-control" maxlength="45">
                                <option selected>Administrador</option>
                                <option>Empleado</option>
                            </select>
                            <span class="text-danger" asp-validation-for="UserDto.Rol"></span>
                        </div>

                    </div>
                </div>
                <div>
                                    
                    <br/>
                    <button type="submit" class="btn btn-light btn-lg btn-block">Guardar</button>
                    <br/>
                    <br/>
                    <a href="~/Index" class="btn btn-light btn-lg btn-block">Cancelar</a>
                </div>
                
            </form>
            <form method="get">
                    
                    
            </form>

            
            <div class="row">
                <div>
                    <img src="~/cactus.png" alt="Cactus bebe" class="cactus-image">
                    <h1 class="text-white">Agua de Cactus</h1>
                    <h8 class="text-white">La casa del frappé desde 2019</h8>
                    
                </div>
                
                <div >
                    <table class="table">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Nombre de usuario</th>
                            <th>Rol</th>
                            <th>Género</th>
                            <th>Edad</th>
                            <th></th>
                        </tr>
                        @foreach (var user in @Model.Users)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.LastName</td>
                                <td>@user.UserName</td>
                                <td>@user.Rol</td>
                                <td>@user.Gender</td>
                                <td>@user.Age</td>
                                <td>
                                    <a a-asp-area="" asp-page="/User/EditV" asp-route-id="@user.id"
                                       class="btn btn-light btn-sm btn-block" role="button">Edit</a>
                                    <br/>
                                    <br/>
                                    <a a-asp-area="" asp-page="/User/Delete" asp-route-id="@user.id"
                                       class="btn btn-light btn-sm btn-block" role="button">Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            
        </div>
    </main>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


</body>
</html>