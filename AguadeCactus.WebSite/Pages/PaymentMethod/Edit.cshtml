@page "{id:int}"
@model AguadeCactus.WebSite.Pages.PaymentMethod.Edit

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AguadeCactus.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/category.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AguadeCactus.WebSite.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"/>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Editing</h2>
            <form method="post">
                
                <input type="hidden" asp-for="PaymentMethodDto.id"/>
                <div class="form-group">
                    <label asp-for="PaymentMethodDto.Name"></label>
                    <input asp-for="PaymentMethodDto.Name" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="PaymentMethodDto.Name"></span>
                </div>
                
                <div class="form-group">
                    <label for="FormControlDescription"></label>
                    <textarea asp-for="PaymentMethodDto.Description" class="form-control" id="FormControlDescription" rows="3" placeholder="Descripción", maxlength="45"></textarea>
                    <span class="text-danger" asp-validation-for="PaymentMethodDto.Description"></span>
                </div>
                
                
                
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>An error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col-md-1"></div>
    </div>
</div>
</body>
</html>

