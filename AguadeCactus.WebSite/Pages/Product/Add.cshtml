@page
@model AguadeCactus.WebSite.Pages.Product.Add


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AguadeCactus.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/product.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AguadeCactus.WebSite.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"/>
        
</head>
<body>
<div>
    <h1 class="text-white">Productos</h1>
    <div>
        <div class="form-group col-md-4">
            <label for="inputCategory">Categoria</label>
            <select id="inputCategory" class="form-control">
                <option selected>Categoria...</option>
                <option>...</option>
                <option>...</option>
            </select>
        </div>
        <br/>
        <input type="text" class="form-control" placeholder="Precio">
        <br/>
        <div class="form-group col-md-4">
            <label for="inputSize">Tamaño</label>
            <select id="inputSize" class="form-control">
                <option selected>Chico</option>
                <option>Mediano</option>
                <option>Grande</option>
            </select>
        </div>
        <div class="form-group">
            <label for="FormControlDescription"></label>
            <textarea class="form-control" id="FormControlDescription" rows="3" placeholder="Descripción"></textarea>
        </div>
        <br/>
        <a href="" class="btn btn-light btn-lg btn-block">Agregar</a>
        <a href="" class="btn btn-light btn-lg btn-block">Actualizar</a>
        <a href="" class="btn btn-light btn-lg btn-block">Borrar</a>
        <a href="" class="btn btn-light btn-lg btn-block">Cancelar</a>
        
    </div>
    
</div>
</body>
</html>