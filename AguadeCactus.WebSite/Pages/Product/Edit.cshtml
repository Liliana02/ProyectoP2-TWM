@page "{id:int}"
@model AguadeCactus.WebSite.Pages.Product.Edit

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AguadeCactus.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/category.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AguadeCactus.WebSite.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"/>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Editar producto</h2>
            <form method="post">
                
                <input type="hidden" asp-for="ProductDto.id"/>
                <div class="form-group">
                    <label asp-for="ProductDto.Name"></label>
                    <input asp-for="ProductDto.Name" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="ProductDto.Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductDto.Price"></label>
                    <input asp-for="ProductDto.Price" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="ProductDto.Price"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ProductDto.Size"></label>
                    <select asp-for="ProductDto.Size" id="inputSize" class="form-control">
                        <option selected>Chico</option>
                        <option>Mediano</option>
                        <option>Grande</option>
                    </select>
                    <span class="text-danger" asp-validation-for="ProductDto.Size"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ProductDto.IdCategory" class="text-white">Categoria</label>
                    <select id="Category" name="SelectedOption" class="form-control" asp-for="ProductDto.IdCategory">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.id">@category.Name</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="ProductDto.IdCategory"></span>
                </div>
                
                
                <div class="form-group">
                    <label asp-for="ProductDto.Description"></label>
                    <textarea asp-for="ProductDto.Description" class="form-control" id="FormControlDescription" rows="3" placeholder="Descripción", maxlength="45"></textarea>
                    <span class="text-danger" asp-validation-for="ProductDto.Description"></span>
                </div>
                
                
                
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>An error</li>
                            }
                        </ul>
                    </div>
                }

                <br/>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-light btn-lg btn-block mb-2">Guardar</button>
                        <a href="/List" class="btn btn-light btn-lg btn-block mb-2">Cancelar</a>
                    </div>
                </div>
                
            </form>
        </div>
        
        <div class="col-md-1"></div>
    </div>
</div>
</body>
</html>

