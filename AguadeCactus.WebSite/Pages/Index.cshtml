@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AguadeCactus.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AguadeCactus.WebSite.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css"/>
</head>

<body class="bg-black">

<div class="container center-content-container">
    <main role="main" class="pb-3">
        <div class="center-image-text">
            <div>
                <img src="~/cactus.png" alt="Cactus bebe" class="cactus-image">
            </div>
            <div>
                <h1 class="text-white">Agua de Cactus</h1>
                <h8 class="text-white">La casa del frappé desde 2019</h8>
            </div>
        </div>
        <div id="carouselExampleControls" class="carousel slide carousel-container" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/wafle-kinder.png" class="d-block w-100" alt="wafle-kinder">
                </div>
                <div class="carousel-item">
                    <img src="~/frappe-gansito.png" class="d-block w-100" alt="frappe-gansito">
                </div>
                <div class="carousel-item">
                    <img src="~/wafle-queso.png" class="d-block w-100" alt="wafle-queso">
                </div>
                <div class="carousel-item">
                    <img src="~/frappe-fresa.png" class="d-block w-100" alt="frappe-fresa">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </main>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    // Collapse the navbar after clicking a link
    document.addEventListener('DOMContentLoaded', function () {
        var navbarCollapse = document.querySelector('.navbar-collapse');
        var navbarToggler = document.querySelector('.navbar-toggler');

        // Toggle the navbar on button click
        navbarToggler.addEventListener('click', function () {
            navbarCollapse.classList.toggle('show');
        });

        // Close the navbar when a link is clicked
        var navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(function (link) {
            link.addEventListener('click', function () {
                navbarCollapse.classList.remove('show');
            });
        });
    });
</script>

</body>
